    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "markdown-it": "^12.3.2",
    "markdown-it-attrs": "^4.0.0",
