  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "npx @11ty/eleventy --serve & gulp watch",
    "debug": "DEBUG=Eleventy* eleventy",
    "newRecipe": "echo '---\ntitle: title\ndate: 2020-12-31 18:00:00 -4\ndescription: description\ntags: [strings]\n---' > src/drafts/new.md",
    "newConcept": "echo '---\ntitle: title\ndate: 2020-12-31 18:00:00 -4\ndescription: description\ntags: [strings]\n---' > src/drafts/new.md",
    "newDefinition": "echo '---\ntitle: title\n---' > src/drafts/kitchen-glossary/new.md",
    "spellcheck": "mdspell -n -r --en-us 'src/drafts/*.md' 'src/concepts/*.md' 'src/recipes/*.md' > mispellings.txt"
  },
